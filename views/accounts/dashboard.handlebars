<h2>User's Dashboard!</h2>

<div class="col-md-8 login-page">
    {{#if postMessage}}
        <h2 class="alert alert-success">{{ postMessage}}</h2>
    {{/if}}
    <h2><i class="fa fa-sign-in"></i> Add Item!</h2>

    Welcome back, {{ user.email }}!

    <form action="/updateUser" method="POST" id="add-item">
        <div class="form-group">
                <label for="txtDisplayName">Display Name</label>
            <input type="text" class="form-control" name="txtDisplayName" id="txtDisplayName" placeholder="Text to Post">
        </div>
        <div class="form-group">
            <label for="txtAbout">About</label>
            <textarea id="txtAbout" name="txtAbout" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
