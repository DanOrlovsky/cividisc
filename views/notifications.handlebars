<div class="container">

    {{#each notifications }}
        <div class="notification{{id}} text-center">
            <p><a href="{{url}}">{{ text }}</a> &nbsp;&nbsp; <a href="" class="updateNotification" data-id="{{id}}"><i class="fa fa-close"></i></a></p>
        </div>
        <hr />
    {{/each}}

</div>

<script>
    $('.updateNotification').on("click", function(e) {
        e.preventDefault();
        let id = parseInt($(this).attr('data-id'));
        let url = '/notification/read/' + id;
        $.ajax({
            url: url,
            method: "POST",
            success: function(response) {
                location.reload();
            }
        })
    });
</script>