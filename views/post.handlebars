{{ posts.title }}
<a href="" data-id="{{posts.id}}" class="upvote">Upvote</a>
{{#if posts.children}}
    {{#each posts.children}}
        {{> child}}
    {{/each}}
{{/if}}


<script>
    $('.upvote').on('click', function(e) {
        e.preventDefault();
        var url = '/vote/upvote/' + $(this).attr('data-id');
        console.log(url);
        $.ajax({
            url: url,
            method: "POST",
            success: function() {
                alert("Hooray!");
            }
        })
    })
</script>