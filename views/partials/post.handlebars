
        <div class="row post">
            <div class="col-1">

                {{#if user}}
                <a href="" class="vote-up" data-id="{{ post.id }}"><img src="../../assets/icons/good.png" alt="discUp" class="discup"></a>
                <br>
                <span class="mx-2 text-success upvotes{{post.id}} vote-count lead">{{ post.upVotes }}</span>
                <br>
                <span class="mx-2 my-1 downvotes{{post.id}} vote-count lead">{{ post.downVotes}}</span>
                <br>
                <a href="" class="vote-down" data-id="{{post.id}}"><img src="../../assets/icons/bad.png" alt="discDown" class="discdown"></a>
                {{/if}}
            </div>
            <div class="col-7">

                <h4><a href="/post/view/{{post.id}}">{{ post.title }}</a></h4>
                {{#if post.url}}<p class="text-muted"><a href="{{post.url}}">{{post.url}}</a></p>{{/if}}
                <p>{{ post.comment}}</p>
                <div>
                <small>In: {{>topic post.Topic }}</small>
                <small>By: {{ post.PostUser.displayName }}</small>
                </div>
                <br>
                {{#if user}}
                    {{#if (ifTimeLeft post.postDate post.postLife) }}
                        <div class="reply-box">
                            <textarea id="replyTo{{post.id}}" class="form-control reply" cols='4'></textarea>
                            <button class="btn btn-outline-success replyBtn" data-id="{{ post.id }}">Reply</button>
                        </div>
                    {{/if}}
                {{/if}}
            </div>

            <div class="col-2">
                <p class="timeLeft text-center lead">Time Left </p>
                <br>
                <h2 class="lead text-center"> {{getTimeLeft post.postDate post.postLife}}<h2>
            </div>
        </div>

        <hr> 
        {{#if post.children}}
            {{#each post.children as |post| }}
                {{#with ../this }}
                    {{> post post=post}}
                {{/with }}
            {{/each}}
        {{/if}}