

<div class="container-fluid">

 <div class="row">
     <div class="col-lg border mx-5 px-5 py-4 ">
         <h4>Topics</h4>
         <hr>
         <h5><a href="/">All</a></h5>
        {{#each topics}}
            <h6 class="lead">{{> topic }}<h6>
        {{/each}}
     </div>
        <div class="col-12 col-lg-6 border px-4 py-4 box-shadow">
            {{#unless posts}}
                <h4>Nothing to show</h4>
            {{/unless}}
            {{#if posts}}
                <h4>Ongoing Discussions</h4>
                <hr>
                {{#each posts as |post|}}
                    {{#with ../this}}
                        {{> post post=post }}
                    {{/with}}
                {{/each}}
            {{/if}}
            <nav aria-label="Page navigation">
                <ul class="pagination">
                </ul>
            </nav>
        </div>
        <div class="col-lg border mx-5 px-5 py-4 ">
            <h4>Disc Rules</h4>
            <hr>
        </div>
    </div>
</div>

