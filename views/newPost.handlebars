{{#if user}}
<div class="container">
    {{#if message}} 
        <h4 class="alert alert-danger">{{message}}</h4>
    {{/if}}

    <div class="col-md-8 login-page">
        <h2>Start a Discussion!</h2>
        <p class="lead">This thread will end in 90 minutes.</p>
        <form action="/api/posts/add" method="POST" id="add-item">
            <div class="form-group">
                <input type="text" class="form-control" name="title" id="title" placeholder="Title">
            </div>
            <div class="form-group">
                <select class="form-control" name="topicId">
                    <option value="-1" disabled selected>Please select a topic</option>
                    {{#each topics }}
                        <option value="{{ id }}">{{ name }}</option>
                    {{/each}}
                </select>
            </div>
            {{#if canAddTopic }}
            <div class="form-group">
                <label for="newTopic">Or, add a new topic</label>
                <div class="row">
                <div class="col-8">
                    <input type="text" name="name" class="form-control" />
                </div>
                <div class="col-2">
                    <button class="btn btn-submit">Submit</button>
                </div>
                </div>                
            </div>
            <script>
                $.ajax()
            </script>
            {{/if}}
            <div class="form-group">
                <textarea class="form-control" id="body" name="comment" rows="4" placeholder="Comment"></textarea>
            </div>

            <div class="form-group">
                <input type="text" class="form-control" name="url" id="url" placeholder="url">
            </div>
            <button type="submit" class="btn btn-outline-success">Post</button>
        </form>
    </div>
</div>
{{/if}}